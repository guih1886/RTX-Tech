@model List<Product>;
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <a class="btn btn-primary" role="button" asp-controller="Home" asp-action="CreateProduct">Adicionar Produto</a>
</div>

<table class="table table-responsive text-center align-content-center">
    @if (Model.Any())
    {
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Imagem</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Detalhe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td class="align-content-center">@product.Id</td>
                    <td class="align-content-center"><img src="@product.Photo" class="img-fluid" style="width: 200px; height: 100px;" alt="..."></td>
                    <td class="align-content-center text-break">@product.Name</td>
                    <td class ="align-content-center text-break">@product.Description</td>
                    <td class="align-content-center">
                        <a class="btn btn-secondary" asp-route-id="@product.Id" role="button" data-bs-toggle="modal" data-bs-target="#exampleModal">Detalhe</a>
                    </td>
                </tr>
            }
        </tbody>
    }
    else
    {
        <h3 class="text-center">Sem produtos cadastrados</h3>
    }
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">...</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>